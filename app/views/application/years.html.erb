<style type="text/css">

body {
  background-image: url(http://www.hdwallpapers.in/walls/space_time_travel-wide.jpg);
  width: 100%;
  height: 100%;
  /*background-size: cover;*/
  /*background-repeat: no-repeat;*/
  z-index: -1;
  top: 0px;
  left: 0px;
}

div.transbox {
    margin: 30px;
    background-color: #ffffff;
    border: 1px solid black;
    opacity: 0.6;
}

div.transbox p {
    margin: 5%;
    padding-left: 30px;
    font-weight: bold;
    color: #000000;
}

h5 {
  font-weight: bold;
  margin-left: 15px;
}

.links {
  font-weight: bold;
  text-align: center;
}
</style>

<body>

<div class="transbox">
<center><h1>Scroll Through Time</h1></center>
<div class="links">
  <a ui-sref="home">Homepage</a><br><br>
  </div>
</div>

<div class="transbox">
<div class="search">
  <select ng-model="vm.selYear">
  <option value="">or Select a Specific Year Here</option>
  <option value="1960">1960</option>
  <option value="1970">1970</option>
  <option value="1980">1980</option>
  <option value="1990">1990</option>
  <option value="2000">2000</option>
</select>

<a ui-sref="year({year: vm.selYear })" ng-show="vm.selYear">Go to Selected Year!</a>
</div>
</div>

<ul>
  <li ng-repeat="year in vm.years track by $index">
  <div class="transbox">
    <h3><center>In the Year {{year.year_number}}</center></h3>
    <h5>World Events</h5>
    <p>{{year.world_events}}</p>
    <h5>Entertainment</h5>
    <p>{{year.entertainment}}</p>
    <h5>Science</h5>
    <p>{{year.science}}</p>
    <div class="links">
    <a ui-sref="home">Homepage</a><br><br>
  </div>
</div>
  </li>
</ul>


</body>




